<div class="mt-4">
  <h3>Create Course</h3>
  <form method="POST" action="/courses/store">
    <div class="form-group">
      <label for="name">Name</label>
      <input
        name="name"
        type="text"
        class="form-control"
        id="name"
      />
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <input
        name="description"
        type="text"
        class="form-control"
        id="description"
      />
    </div>
    <div class="form-group">
      <label for="vID">Video ID</label>
      <input
        name="vID"
        type="text"
        class="form-control"
        id="vID"
      />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
  </form>
</div>