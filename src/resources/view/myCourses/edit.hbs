<div class="mt-4">
  <h3>Update Course</h3>
  <form method="POST" action="/mycourses/{{this._id}}?_method=PUT">
    <div class="form-group">
      <label for="name">Name</label>
      <input
        name="name"
        type="text"
        class="form-control"
        id="name"
        value="{{this.name}}"
      />
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <input
        name="description"
        type="text"
        class="form-control"
        id="description"
        value="{{this.description}}"
      />
    </div>
    <div class="form-group">
      <label for="vID">Video ID</label>
      <input
        name="vID"
        type="text"
        class="form-control"
        id="vID"
        value="{{this.vID}}"
      />
    </div>
    <div>
      <a href="/mycourses" class="btn btn-light">Cancel</a>
      <button type="submit" class="btn btn-primary">Save</button>
    </div>
  </form>
</div>